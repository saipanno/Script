yum -q -y install ipmitool OpenIPMI
service ipmi start
ipmi=`echo {ip} | awk 'BEGIN{FS="."} { print $3"."$4 }'`
ipmitool lan set 2 ipsrc static
ipmitool lan set 2 ipaddr 10.254.$ipmi
ipmitool lan set 2 netmask 255.255.0.0 
ipmitool lan set 2 defgw ipaddr 10.254.0.1
ipmitool user set name 3 saipanno 
ipmitool user set password 3 saipanno.com
ipmitool user enable 3
ipmitool channel setaccess 1 3 callin=on ipmi=on link=on privilege=4
service ipmi stop
